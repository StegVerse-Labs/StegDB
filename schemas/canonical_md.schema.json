{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Canonical Markdown Reference",
  "type": "object",
  "properties": {
    "canonical_path": {
      "type": "string",
      "description": "Path to the authoritative canonical markdown file"
    },
    "required_reference": {
      "type": "boolean",
      "default": true
    },
    "allowed_modes": {
      "type": "array",
      "items": {
        "enum": ["link-only", "excerpt"]
      }
    },
    "hash": {
      "type": "string",
      "description": "Optional content hash for drift detection"
    }
  },
  "required": ["canonical_path"]
}
