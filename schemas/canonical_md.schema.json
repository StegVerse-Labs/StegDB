{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Canonical Markdown Reference",
  "type": "object",
  "additionalProperties": false,
  "required": ["canonical_path"],
  "properties": {
    "canonical_path": {
      "type": "string",
      "description": "Path to the authoritative canonical markdown file"
    },
    "required_reference": {
      "type": "boolean",
      "default": true
    },
    "allowed_modes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["link-only", "excerpt"]
      },
      "default": ["link-only"]
    },
    "hash": {
      "type": "string",
      "description": "Optional content hash for drift detection"
    }
  }
}
